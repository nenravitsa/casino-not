{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "lib": ["es2017"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*"]
}